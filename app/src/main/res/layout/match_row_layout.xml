<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:contentDescription="@string/profilePictur"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>


    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_toStartOf="@id/row_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        >

        <TextView
            android:id="@+id/row_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="פנדה אנונימית"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/row_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="טקסט כלשהו על הפנדה האנונימית"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/row_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/hedgehog"
        android:background="@color/colorPrimaryDark"
        android:layout_marginEnd="4dp" />

</RelativeLayout>